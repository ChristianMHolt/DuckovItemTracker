<Window x:Class="ItemTracker.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verification results"
        Height="420"
        Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#0E1524">
    <Window.Resources>
        <DropShadowEffect x:Key="SoftShadow" BlurRadius="12" ShadowDepth="2" Direction="270" Opacity="0.35" Color="#000000" />
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E6ECF5" />
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>
    </Window.Resources>
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="#111C2F" BorderBrush="#1E3049" BorderThickness="1" CornerRadius="12" Padding="12" Effect="{StaticResource SoftShadow}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
                <Border Width="34" Height="34" CornerRadius="8" Background="#35B4E6" VerticalAlignment="Center">
                    <TextBlock Text="âœ”" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
                </Border>
                <TextBlock Text="{Binding HeaderText}" FontWeight="SemiBold" FontSize="16" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,12,0,0" Background="#101A2D" BorderBrush="#1E3049" BorderThickness="1" CornerRadius="12" Padding="10" Effect="{StaticResource SoftShadow}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding UnusedImages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="1" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="0,4" Background="#0D1522" CornerRadius="8">
                                <TextBlock Text="{Binding}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
