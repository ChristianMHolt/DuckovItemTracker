<Window x:Class="ItemTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemTracker"
        xmlns:conv="clr-namespace:ItemTracker.Utilities"
        mc:Ignorable="d"
        Title="Game Item Price Tracker"
        Height="650"
        Width="1050"
        Icon="duck.ico"
        MinWidth="900"
        MinHeight="550"
        Background="Transparent">
    <Window.Resources>
        <SolidColorBrush x:Key="CardBackground" Color="#111C2E" />
        <SolidColorBrush x:Key="AccentBrush" Color="#4FC3F7" />
        <SolidColorBrush x:Key="SubtleBrush" Color="#8CA5C1" />
        <SolidColorBrush x:Key="InputBackground" Color="#19263A" />
        <SolidColorBrush x:Key="BorderBrush" Color="#233553" />
        <SolidColorBrush x:Key="SurfaceOverlay" Color="#0B1322" />
        <LinearGradientBrush x:Key="PageBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0E1626" Offset="0" />
            <GradientStop Color="#0B1220" Offset="0.4" />
            <GradientStop Color="#091020" Offset="1" />
        </LinearGradientBrush>

        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="0,0,0,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border Background="{StaticResource CardBackground}" Padding="4" CornerRadius="6" Grid.Row="0">
                                    <TextBlock Text="{TemplateBinding Header}" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" />
                                </Border>
                                <ContentPresenter Grid.Row="1" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6,4" />
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="Padding" Value="6,2" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#77000000" Opacity="0.35" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#63D3FF" />
                    <Setter Property="BorderBrush" Value="#63D3FF" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#35A6D8" />
                    <Setter Property="BorderBrush" Value="#35A6D8" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="RowBackground" Value="#142136" />
            <Setter Property="AlternatingRowBackground" Value="#0E1726" />
            <Setter Property="HorizontalGridLinesBrush" Value="#20314E" />
            <Setter Property="VerticalGridLinesBrush" Value="#20314E" />
            <Setter Property="ColumnHeaderHeight" Value="36" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,6" />
                        <Setter Property="BorderBrush" Value="#1F2E45" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#12203A" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="BorderBrush" Value="#1F2E45" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="Padding" Value="8,4" />
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#0A1220" />
            <Setter Property="Foreground" Value="{StaticResource SubtleBrush}" />
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#1F2D44" />
            <Setter Property="BorderBrush" Value="#1F2D44" />
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#F44336" />
            <Setter Property="BorderBrush" Value="#F44336" />
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="{StaticResource CardBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.25" Color="#AA000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <conv:IconPathToImageSourceConverter x:Key="IconConverter" />
    </Window.Resources>
    <Grid Background="{StaticResource PageBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Decorative accents -->
        <Ellipse Width="220" Height="220" Fill="#252E4B" Opacity="0.22" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-80,-80,0,0" />
        <Ellipse Width="320" Height="320" Fill="#1A3F66" Opacity="0.14" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-100,-40" />

        <Grid Grid.Row="0" Margin="18,18,18,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Style="{StaticResource CardBorder}" Padding="14" Background="#111A2C" Grid.ColumnSpan="3">
                <DockPanel LastChildFill="False" VerticalAlignment="Center">
                    <Image Source="duck.ico" Width="48" Height="48" Stretch="Uniform" Margin="0,0,14,0" />
                    <StackPanel>
                        <TextBlock Text="Duckov Item Tracker" FontSize="24" FontWeight="Bold" />
                        <TextBlock Text="Track, price, and verify your game items with confidence." Foreground="{StaticResource SubtleBrush}" />
                    </StackPanel>
                    <Border Background="#15233A" CornerRadius="16" Padding="10,6" HorizontalAlignment="Right" DockPanel.Dock="Right">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Live view" Foreground="{StaticResource SubtleBrush}" Margin="0,0,8,0" />
                            <Ellipse Width="10" Height="10" Fill="#4FC3F7" VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#4FC3F7" BlurRadius="15" ShadowDepth="0" Opacity="0.9" />
                                </Ellipse.Effect>
                            </Ellipse>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="18,0,18,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="3" Style="{StaticResource CardBorder}" Background="{StaticResource SurfaceOverlay}" />

            <!-- Form and totals -->
            <DockPanel Grid.Row="0" LastChildFill="True" Margin="4">
                <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Width="260" Margin="14,0,0,0" VerticalAlignment="Top">
                    <TextBlock Text="Overview" FontSize="16" FontWeight="Bold" />
                    <TextBlock Text="Stay on top of your collection" Foreground="{StaticResource SubtleBrush}" Margin="0,0,0,6" />
                    <Border Style="{StaticResource CardBorder}" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Totals" FontWeight="SemiBold" Foreground="{StaticResource SubtleBrush}" />
                            <TextBlock Text="{Binding TotalsText}" TextWrapping="Wrap" FontSize="14" Margin="0,4,0,0" />
                        </StackPanel>
                    </Border>
                    <Button Content="Verify" Margin="0,14,0,0" Click="OnVerifyClick" />
                </StackPanel>

                <GroupBox Header="Item Details" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="220" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="140" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="6,0" Text="{Binding NameText, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Unit Price" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="3" Margin="6,0" Width="140" Text="{Binding UnitPriceText}" />

                        <TextBlock Grid.Row="0" Grid.Column="4" Text="Stack Size" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="4" Margin="70,0,0,0" Width="80" Text="{Binding StackSizeText}" HorizontalAlignment="Left" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Weight per item (kg)" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" Margin="6,4,6,0" Width="180" Text="{Binding WeightText}" />

                        <Button Grid.Row="1" Grid.Column="2" Margin="6,4,0,0" Content="Choose Icon" Click="OnChooseIcon" />
                        <TextBlock Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Margin="8,6,0,0" Text="{Binding IconLabel}" VerticalAlignment="Center" Foreground="{StaticResource SubtleBrush}" />

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="5" Orientation="Horizontal" Margin="0,16,0,0">
                            <Button Content="{Binding AddOrUpdateButtonText}" Width="140" Click="OnAddOrUpdate" />
                            <Button Content="Clear Form" Width="130" Margin="10,0,0,0" Style="{StaticResource SecondaryButton}" />
                            <Button Content="Delete Selected" Width="150" Margin="10,0,0,0" Style="{StaticResource DangerButton}" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </DockPanel>

            <!-- Sorting and search -->
            <Grid Grid.Row="1" Margin="4,12,4,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox Header="Sorting" Padding="10" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Sort by:" VerticalAlignment="Center" />
                        <ComboBox Width="160"
                                  Margin="6,0"
                                  ItemsSource="{Binding SortFields}"
                                  SelectedItem="{Binding SelectedSortField}" />
                        <TextBlock Text="Order:" Margin="12,0,0,0" VerticalAlignment="Center" />
                        <ComboBox Width="120"
                                  Margin="6,0"
                                  ItemsSource="{Binding SortOrders}"
                                  SelectedItem="{Binding SelectedSortOrder}" />
                        <Button Content="Apply Sort" Margin="12,0,0,0" Click="OnApplySort" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Column="1" Header="Search" Padding="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Search items:" VerticalAlignment="Center" />
                        <TextBox Width="320" Margin="6,0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Content="Clear Search" Margin="8,0,0,0" Click="OnClearSearch" />
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Data grid -->
            <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="4,12,4,4" Padding="6">
                <DataGrid ItemsSource="{Binding FilteredItems}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          RowHeight="40"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="All">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Icon" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Width="32" Height="32" Stretch="Uniform" Source="{Binding IconPath, Converter={StaticResource IconConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Item" Binding="{Binding Name}" Width="*" />
                        <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice, StringFormat=F2}" Width="100" />
                        <DataGridTextColumn Header="Stack Size" Binding="{Binding StackSize}" Width="90" />
                        <DataGridTextColumn Header="Price/Stack" Binding="{Binding PricePerStack, StringFormat=F2}" Width="110" />
                        <DataGridTextColumn Header="Weight/Item (kg)" Binding="{Binding WeightPerItem, StringFormat=F3}" Width="140" />
                        <DataGridTextColumn Header="Price/kg" Binding="{Binding PricePerKg, StringFormat=F2}" Width="100" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <!-- Status -->
        <StatusBar Grid.Row="2" Margin="18,0,18,14">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
